<% # first two are read only (come from opiton_type.rb) %>
<h3><%= t("name") %>:<%= f.object.option_type.name%></h3>
<h3><%= t("presentation") %>:<%= f.object.option_type.presentation%></h3>
<%= f.field_container :is_required do %>
  <%= f.label :is_required, t("required") %> <span class="required">*</span><br />
  <%= f.check_box :is_required %>
  <%= f.error_message_on :is_required %>
<% end %>

<%= f.field_container :allow_multiple_choice do %>
  <%= f.label :allow_multiple_choice, t("multiple_choice") %> <span class="required">*</span><br />
  <%= f.check_box :allow_multiple_choice %>
  <%= f.error_message_on :allow_multiple_choice %>
<% end %>



